<%- include('layout', { title: 'Cron Jobs', body: `
<div class="space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Cron Jobs</h1>
            <p class="mt-1 sm:mt-2 text-sm text-gray-600">Manage and monitor your scheduled jobs</p>
        </div>
        <button onclick="showCreateJobModal()" class="w-full sm:w-auto bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg shadow-md hover:shadow-lg transition-all font-medium flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>Create Job</span>
        </button>
    </div>

    <!-- Jobs Table - Desktop -->
    <div class="hidden lg:block bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
            <table class="w-full divide-y divide-gray-200" style="table-layout: auto;">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 20%;">Name</th>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 15%;">Cron</th>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 25%;">Endpoint</th>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 12%;">Status</th>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 13%;">Last Run</th>
                        <th class="px-3 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 13%;">Next Run</th>
                        <th class="px-3 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider" style="width: 60px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="jobs-table" class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center">
                            <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600 mx-auto mb-4"></div>
                            <p class="text-sm text-gray-500">Loading jobs...</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Jobs Cards - Mobile/Tablet -->
    <div id="jobs-cards" class="lg:hidden space-y-4">
        <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600 mx-auto mb-4"></div>
            <p class="text-center text-sm text-gray-500">Loading jobs...</p>
        </div>
    </div>
</div>

<!-- Create Job Modal -->
<div id="createJobModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto z-50 p-4">
    <div class="relative top-4 sm:top-10 mx-auto max-w-2xl w-full bg-white rounded-xl sm:rounded-2xl shadow-2xl">
        <div class="sticky top-0 bg-white border-b border-gray-200 px-4 sm:px-6 py-4 sm:py-5 flex items-center justify-between rounded-t-xl sm:rounded-t-2xl">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Create New Cron Job</h3>
            <button onclick="closeCreateJobModal()" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div class="px-4 sm:px-6 py-4 sm:py-6 max-h-[calc(100vh-200px)] overflow-y-auto">
            <form id="createJobForm" onsubmit="createJob(event)" class="space-y-4 sm:space-y-5">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Job Name *</label>
                        <input type="text" name="name" required class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                    </div>
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <label class="block text-sm font-semibold text-gray-700">Cron Expression *</label>
                            <!-- Help Tooltip Trigger -->
                            <div class="relative group">
                                <button type="button" id="cronHelpBtn" class="p-1 text-gray-400 hover:text-blue-600 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-full" aria-label="Cron expression help">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </button>
                                <!-- Tooltip Content -->
                                <div id="cronHelpTooltip" class="hidden absolute right-0 top-full mt-2 w-80 sm:w-96 bg-white border border-gray-200 rounded-lg shadow-xl p-4 max-h-96 overflow-y-auto" style="z-index: 9999;">
                                    <div class="flex items-start justify-between mb-3">
                                        <h3 class="text-sm font-semibold text-gray-900 flex items-center">
                                            <svg class="w-4 h-4 mr-1 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            Cron Expression Guide
                                        </h3>
                                        <button type="button" id="closeCronHelp" class="text-gray-400 hover:text-gray-600 focus:outline-none">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="space-y-3 text-xs">
                                        <div>
                                            <p class="font-semibold text-gray-900 mb-2">Format:</p>
                                            <code class="block bg-gray-100 px-2 py-1 rounded text-gray-900 font-mono mb-2">minute hour day month dayOfWeek</code>
                                            <p class="text-gray-600">Fields: minute (0-59) | hour (0-23) | day (1-31) | month (1-12) | dayOfWeek (0-7, 0/7=Sun)</p>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900 mb-2">Special Characters:</p>
                                            <ul class="space-y-1 text-gray-600">
                                                <li><code class="bg-gray-100 px-1 py-0.5 rounded font-mono">*</code> - Any value</li>
                                                <li><code class="bg-gray-100 px-1 py-0.5 rounded font-mono">*/n</code> - Every n units</li>
                                                <li><code class="bg-gray-100 px-1 py-0.5 rounded font-mono">n-m</code> - Range from n to m</li>
                                                <li><code class="bg-gray-100 px-1 py-0.5 rounded font-mono">n,m</code> - List of values</li>
                                            </ul>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900 mb-2">Time Intervals:</p>
                                            <div class="space-y-1 text-gray-700">
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">*/10 * * * *</code> - Every 10 min</div>
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">*/15 * * * *</code> - Every 15 min</div>
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">*/30 * * * *</code> - Every 30 min</div>
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">0 * * * *</code> - Every hour</div>
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">0 */2 * * *</code> - Every 2 hours</div>
                                                <div><code class="bg-blue-50 px-1.5 py-0.5 rounded text-blue-900 font-mono">0 */6 * * *</code> - Every 6 hours</div>
                                            </div>
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900 mb-2">Scheduled Times:</p>
                                            <div class="space-y-1 text-gray-700">
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">0 9 * * *</code> - Daily at 9 AM</div>
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">0 0 * * *</code> - Daily at midnight</div>
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">30 14 * * *</code> - Daily at 2:30 PM</div>
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">0 0 * * 0</code> - Weekly on Sunday</div>
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">0 0 1 * *</code> - Monthly on 1st</div>
                                                <div><code class="bg-green-50 px-1.5 py-0.5 rounded text-green-900 font-mono">0 8 * * 1-5</code> - Weekdays at 8 AM</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <select id="cronPreset" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base bg-gray-50">
                                <option value="">Select a preset...</option>
                                <option value="*/10 * * * *">Every 10 minutes</option>
                                <option value="*/15 * * * *">Every 15 minutes</option>
                                <option value="*/30 * * * *">Every 30 minutes</option>
                                <option value="0 * * * *">Every hour</option>
                                <option value="0 */2 * * *">Every 2 hours</option>
                                <option value="0 */4 * * *">Every 4 hours</option>
                                <option value="0 */6 * * *">Every 6 hours</option>
                                <option value="0 */12 * * *">Every 12 hours</option>
                                <option value="0 0 * * *">Daily at midnight</option>
                                <option value="0 9 * * *">Daily at 9:00 AM</option>
                                <option value="0 0 * * 0">Weekly on Sunday</option>
                                <option value="0 0 1 * *">Monthly on the 1st</option>
                                <option value="custom">Custom (enter manually)</option>
                            </select>
                            <input type="text" id="cronExpression" name="cronExpression" required placeholder="0 * * * *" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base font-mono">
                            <p class="mt-1 text-xs text-gray-500">Format: <code class="bg-gray-100 px-1 py-0.5 rounded">minute hour day month dayOfWeek</code></p>
                            <div id="cronNextRun" class="text-xs text-green-600 font-medium hidden mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span id="cronNextRunText"></span>
                            </div>
                            <div id="cronError" class="text-xs text-red-600 font-medium hidden mt-1 flex items-center">
                                <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span id="cronErrorText"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                    <textarea name="description" rows="2" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base resize-none"></textarea>
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Endpoint URL *</label>
                    <input type="url" name="endpointUrl" required placeholder="https://api.example.com/webhook" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">HTTP Method</label>
                        <select name="httpMethod" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                            <option value="GET">GET</option>
                            <option value="POST" selected>POST</option>
                            <option value="PUT">PUT</option>
                            <option value="DELETE">DELETE</option>
                            <option value="PATCH">PATCH</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Timezone</label>
                        <input type="text" name="timezone" value="UTC" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                    </div>
                </div>
                <div class="flex flex-col-reverse sm:flex-row justify-end space-y-reverse space-y-2 sm:space-y-0 sm:space-x-4 pt-4 border-t border-gray-200">
                    <button type="button" onclick="closeCreateJobModal()" class="w-full sm:w-auto px-4 sm:px-6 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium text-sm sm:text-base">Cancel</button>
                    <button type="submit" id="submitBtn" class="w-full sm:w-auto px-4 sm:px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all shadow-md font-medium text-sm sm:text-base disabled:opacity-50 disabled:cursor-not-allowed">
                        <span id="submitText">Create Job</span>
                        <svg id="submitSpinner" class="hidden ml-2 h-4 w-4 text-white animate-spin inline" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/jobs.js"></script>
`}) %>
