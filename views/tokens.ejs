<%- include('layout', { title: 'API Tokens', body: `
<div class="space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">API Tokens</h1>
            <p class="mt-1 sm:mt-2 text-sm text-gray-600">Manage your API tokens for programmatic access</p>
        </div>
        <button onclick="showCreateTokenModal()" class="w-full sm:w-auto bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg shadow-md hover:shadow-lg transition-all font-medium flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>Create Token</span>
        </button>
    </div>

    <!-- Tokens Table -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
            <table class="w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Name</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Token</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Permissions</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
                        <th class="px-4 sm:px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Last Used</th>
                        <th class="px-4 sm:px-6 py-3 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody id="tokens-table" class="bg-white divide-y divide-gray-200">
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-indigo-600 mx-auto mb-4"></div>
                            <p class="text-sm text-gray-500">Loading tokens...</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Token Modal -->
<div id="createTokenModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto z-50 p-4">
    <div class="relative top-4 sm:top-10 mx-auto max-w-md w-full bg-white rounded-xl sm:rounded-2xl shadow-2xl">
        <div class="sticky top-0 bg-white border-b border-gray-200 px-4 sm:px-6 py-4 sm:py-5 flex items-center justify-between rounded-t-xl sm:rounded-t-2xl">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Create API Token</h3>
            <button onclick="closeCreateTokenModal()" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <div class="px-4 sm:px-6 py-4 sm:py-6">
            <form id="createTokenForm" class="space-y-4 sm:space-y-5">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Token Name *</label>
                    <input type="text" name="name" required placeholder="My API Token" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                </div>
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Permissions *</label>
                    <p class="text-xs text-gray-500 mb-2">Hold Ctrl/Cmd to select multiple permissions</p>
                    <select name="permissions" multiple required size="5" class="w-full px-3 sm:px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm sm:text-base">
                        <option value="READ">READ - View cron jobs and logs</option>
                        <option value="WRITE">WRITE - Create and update cron jobs</option>
                        <option value="DELETE">DELETE - Delete cron jobs</option>
                        <option value="EXECUTE">EXECUTE - Manually trigger cron jobs</option>
                        <option value="ADMIN">ADMIN - Full access (includes all permissions)</option>
                    </select>
                </div>
                <div class="flex flex-col-reverse sm:flex-row justify-end space-y-reverse space-y-2 sm:space-y-0 sm:space-x-4 pt-4 border-t border-gray-200">
                    <button type="button" onclick="closeCreateTokenModal()" class="w-full sm:w-auto px-4 sm:px-6 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium text-sm sm:text-base">Cancel</button>
                    <button type="submit" class="w-full sm:w-auto px-4 sm:px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all shadow-md font-medium text-sm sm:text-base">Create Token</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Token Created Modal -->
<div id="tokenCreatedModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto z-50 p-4">
    <div class="relative top-4 sm:top-10 mx-auto max-w-md w-full bg-white rounded-xl sm:rounded-2xl shadow-2xl">
        <div class="px-4 sm:px-6 py-4 sm:py-6">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4">Token Created Successfully</h3>
            <div class="mb-4">
                <label class="block text-sm font-semibold text-gray-700 mb-2">Your API Token:</label>
                <div class="flex items-center space-x-2">
                    <code id="tokenValue" class="flex-1 px-3 py-2 bg-gray-100 border border-gray-300 rounded-lg text-sm font-mono break-all"></code>
                    <button onclick="copyToken(document.getElementById('tokenValue').textContent)" class="p-2 text-gray-600 hover:text-indigo-600 hover:bg-gray-100 rounded-lg transition-colors" title="Copy token">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            <strong>Important:</strong> This token will only be shown once. Make sure to copy it now and store it securely.
                        </p>
                    </div>
                </div>
            </div>
            <button onclick="document.getElementById('tokenCreatedModal').classList.add('hidden')" class="w-full px-4 sm:px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all shadow-md font-medium text-sm sm:text-base">I've Copied the Token</button>
        </div>
    </div>
</div>

<script src="/js/tokens.js"></script>
`}) %>

